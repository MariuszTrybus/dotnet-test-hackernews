FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 5000

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["HackerNewsReader.Api.csproj", "HackerNewsReader.Api/"]
RUN dotnet restore "HackerNewsReader.Api/HackerNewsReader.Api.csproj"
COPY . HackerNewsReader.Api/
WORKDIR "/src/HackerNewsReader.Api"
RUN dotnet build "HackerNewsReader.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "HackerNewsReader.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENV ASPNETCORE_URLS=http://*:5000
ENTRYPOINT ["dotnet", "HackerNewsReader.Api.dll"]